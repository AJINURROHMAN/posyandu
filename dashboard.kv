<DashboardScreen>:
    FloatLayout:
        # Tampilan utama
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 1

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Bagian atas untuk hamburger menu
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: '50dp'
                padding: [15, 15, 15, 15]

                Button:
                    background_normal: 'assets/hamb.png'
                    size_hint: None, None
                    size: '70', '70'
                    pos_hint: {'center_y': 0.5}
                    on_release: root.toggle_sidebar()  # Panggil fungsi untuk animasi sidebar

            # Bagian untuk dashboard
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.3
                padding: [20, 10, 20, 10]
                spacing: 30

                # Kotak pertama untuk jumlah balita
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.4, 1  # Ukuran kotak lebih kecil
                    canvas.before:
                        Color:
                            rgba: 0, 0.75, 1, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [20, 20, 20, 20]

                    Image:
                        source: 'assets/3.png'
                        size_hint_y: 0.3  # Ukuran gambar lebih kecil
                        allow_stretch: True
                        keep_ratio: False
                        radius: [20, 20, 0, 0]

                    Label:
                        text: "Jumlah Balita"
                        size_hint_y: 0.10  # Ukuran label lebih kecil
                        color:0 , 0, 0, 1
                        font_size: '14sp'  # Ukuran font lebih kecil
                        bold: True

                # Kotak kedua untuk jumlah ibu hamil
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.4, 1  # Ukuran kotak lebih kecil
                    canvas.before:
                        Color:
                            rgba: 0, 0.75, 1, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [20, 20, 20, 20]

                    Image:
                        source: 'assets/8.png'
                        size_hint_y: 0.3  # Ukuran gambar lebih kecil
                        allow_stretch: True
                        radius: [20, 20, 0, 0]
                        keep_ratio: False

                    Label:
                        text: "Jumlah Ibu Hamil"
                        size_hint_y: 0.10  # Ukuran label lebih kecil
                        color:0 , 0, 0, 1
                        font_size: '14sp'  # Ukuran font lebih kecil
                        bold: True

            # Bagian bawah untuk kalender
            BoxLayout:
                size_hint_y: 0.6
                padding: [25, 25, 25, 25]
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                Image:
                    source: 'assets/date.png'
                    allow_stretch: True
                    padding: 10, 10, 10, 10
                    keep_ratio: False

        # Sidebar menu dengan animasi
        BoxLayout:
            id: sidebar
            orientation: 'vertical'
            size_hint: None, 1
            width: 250
            pos_hint: {'top': 1}
            x: -self.width  # Sidebar disembunyikan di luar layar pada posisi awal
            canvas.before:
                Color:
                    rgba: 0, 0.75, 1, 1  # Warna sidebar
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Konten sidebar
            Button:
                text: "Dashboard"
                bold:True
                color: 1, 1, 1, 1  # Warna teks putih
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0  # Latar belakang transparan
                background_normal: ''  # Menghilangkan gambar default pada tombol
                text_size: self.width, None  # Menyesuaikan lebar teks dengan lebar tombol
                halign: 'left'  # Meratakan teks ke kiri
                valign: 'middle'  # Meratakan teks ke tengah vertikal
                padding_x: 10  # Menambahkan jarak pada sisi kiri
                on_release: 
                    app.root.current = 'dashboard_screen'
                    root.hide_sidebar()
            Button:
                text: "Balita"
                bold:True
                color: 1, 1, 1, 1  # Warna teks putih
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0  # Latar belakang transparan
                background_normal: ''  # Menghilangkan gambar default pada tombol
                text_size: self.width, None  # Menyesuaikan lebar teks dengan lebar tombol
                halign: 'left'  # Meratakan teks ke kiri
                valign: 'middle'  # Meratakan teks ke tengah vertikal
                padding_x: 10  # Menambahkan jarak pada sisi kiri
                on_release: 
                    app.root.current = 'balita_screen'
                    root.hide_sidebar()
            Button:
                text: "Perkembangan Balita"
                bold:True
                color: 1, 1, 1, 1  # Warna teks putih
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0  # Latar belakang transparan
                background_normal: ''  # Menghilangkan gambar default pada tombol
                text_size: self.width, None  # Menyesuaikan lebar teks dengan lebar tombol
                halign: 'left'  # Meratakan teks ke kiri
                valign: 'middle'  # Meratakan teks ke tengah vertikal
                padding_x: 10  # Menambahkan jarak pada sisi kiri
                on_release: 
                    app.root.current = 'balita_screen'  
                    root.hide_sidebar()      
            Button:
                text: "Ibu Hamil"
                bold:True
                color: 1, 1, 1, 1  # Warna teks putih
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0  # Latar belakang transparan
                background_normal: ''  # Menghilangkan gambar default pada tombol
                text_size: self.width, None  # Menyesuaikan lebar teks dengan lebar tombol
                halign: 'left'  # Meratakan teks ke kiri
