<BalitaScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Latar belakang putih
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Data Balita"
            font_size: 28
            bold: True
            color: 0, 0, 0, 1  # Warna teks hitam
            size_hint: None, None
            pos_hint: {"center_x": 0.5, "top": 0.99}
        # Button dengan gambar hamburger (menu)
        Button:
            background_normal: 'assets/hamb.png'  # Gambar ikon hamburger
            background_down: 'assets/hamb.png'
            size_hint: None, None
            size: 70, 70
            pos: 20, root.height - 70
            allow_stretch: True
            keep_ratio: True
            on_press: root.toggle_sidebar()

        # ScrollView untuk menampung GridLayout (supaya bisa scroll)
        ScrollView:
            size_hint: (1, 0.8)  # Mengatur tinggi ScrollView
            pos_hint: {"center_x": 0.5, "top": 0.9}

            # GridLayout vertikal untuk data balita
            GridLayout:
                id: data_container
                background_color: 0, 0, 0, 1
                cols: 1  # Mengatur grid menjadi satu kolom (vertikal)
                padding: 30  # Memberikan padding di sekeliling grid
                spacing: 10  # Memberikan jarak antar elemen dalam grid
                size_hint_y: None  # Supaya ScrollView berfungsi
                height: self.minimum_height  # Mengatur tinggi GridLayout berdasarkan isinya

        # Tombol TAMBAH di pojok kanan agak bawah
        Button:
            text: "Tambah"
            size_hint: None, None
            size: 100, 50
            pos_hint: {"right": 0.9, "y": 0.06}
            background_color: (0, 0.5, 1, 0.9)
            on_release: app.root.current = 'tambah_screen'
            color: 1, 1, 1, 1

        BoxLayout:
            id: sidebar
            orientation: 'vertical'
            size_hint: None, 1
            width: 250
            pos_hint: {'top': 1}
            x: -self.width  # Sidebar disembunyikan di luar layar pada posisi awal
            canvas.before:
                Color:
                    rgba: 0, 0.75, 1, 1  # Warna sidebar
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Konten sidebar
            Button:
                text: "Dashboard"
                bold: True
                color: 1, 1, 1, 1  # Warna teks putih
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0  # Latar belakang transparan
                background_normal: ''  # Menghilangkan gambar default pada tombol
                text_size: self.width, None  # Menyesuaikan lebar teks dengan lebar tombol
                halign: 'left'  # Meratakan teks ke kiri
                valign: 'middle'  # Meratakan teks ke tengah vertikal
                padding_x: 10  # Menambahkan jarak pada sisi kiri
                on_release: 
                    app.root.current = 'dashboard_screen'
                    root.hide_sidebar()
  
            Button:
                text: "Balita"
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0
                background_normal: ''
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
                padding_x: 10
                on_release: 
                    app.root.current = 'balita_screen'
                    root.hide_sidebar()

            Button:
                text: "Perkembangan Balita"
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0
                background_normal: ''
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
                padding_x: 10
                on_release: 
                    app.root.current = 'balita_screen'  
                    root.hide_sidebar()

            Button:
                text: "Ibu Hamil"
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0
                background_normal: ''
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
                padding_x: 10
                on_release:
                    app.root.current = 'bumil_screen'  
                    root.hide_sidebar()

            Button:
                text: "Laporan"
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0
                background_normal: ''
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
                padding_x: 10
                on_release: 
                    app.root.current = 'laporan_screen'   
                    root.hide_sidebar() 

            Button:
                text: "Profil"
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0
                background_normal: ''
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
                padding_x: 10
                on_release:
                    app.root.current = 'profil_screen' 
                    root.hide_sidebar()

            Widget:
                size_hint_y: None
                height: 450
   