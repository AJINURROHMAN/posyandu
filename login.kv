<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 30
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Background color
            Rectangle:
                pos: self.pos
                size: self.size
        Widget:
            size_hint_y: None
            height: 50 
        Image:
            source: 'assets/profil.png'
            size_hint: (None, None)
            size: (250, 230)
            allow_stretch: True
            keep_ratio: True
            pos_hint: {'center_x': 0.5}

        Widget:
            size_hint_y: None
            height: 10   

        TextInput:
            id: username
            hint_text: 'Username'
            multiline: False
            size_hint_y: None
            height: 40
            background_color: (0, 0, 0, 0)
            foreground_color: (0.2, 0.2, 0.2, 1)
            padding_x: [100, 0]
            halign: 'left'
            font_size: 16
            canvas.before:
                Color:
                    rgba: (0, 0, 0, 1)
                Line:
                    width: 1.1
                    points: [self.x + 80, self.y, self.right - 80, self.y]
            canvas.after:
                Color:
                    rgba: (0, 0.3, 0.8, 1) if self.focus else (0, 0, 0, 0)
                Line:
                    width: 1.5
                    points: [self.x + 80, self.y, self.right - 80, self.y]

        BoxLayout:
            orientation: 'vertical'
            spacing: 10

            TextInput:
                id: password
                hint_text: 'Password'
                multiline: False
                password: not show_password.active
                size_hint_y: None
                height: 40
                background_color: (0, 0, 0, 0)
                foreground_color: (0.2, 0.2, 0.2, 1)
                padding_x: [100, 0]
                halign: 'left'
                font_size: 16
                canvas.before:
                    Color:
                        rgba: (0, 0, 0, 1)
                    Line:
                        width: 1.1
                        points: [self.x + 80, self.y, self.right - 80, self.y]
                canvas.after:
                    Color:
                        rgba: (0, 0.3, 0.8, 1) if self.focus else (0, 0, 0, 0)
                    Line:
                        width: 1.5
                        points: [self.x + 80, self.y, self.right - 80, self.y]

            BoxLayout:
                size_hint: (0.5, None)
                height: 40
                padding: [100, 0]
                spacing: 10
                
                
                CheckBox:
                    id: show_password
                    size_hint_x: None
                    width: 40
                    
                    background_color: (0.1, 0.1, 0.1, 1)  # Change to a non-white color for visibility
                
                Label:
                    text: "Lihat Password"
                    color: (0, 0, 0, 1)
                    size_hint_x: None
                    font_size: 14

        Button:
            text: "Login"
            size_hint_y: None
            size_hint_x: 0.5
            height: 45
            pos_hint: {'center_x': 0.5}
            background_color: (0, 0.5, 1, 0.9)
            color: (1, 1, 1, 1)
            font_size: 16
            on_release: root.login()  # Panggil metode login di LoginScreen

        Widget:
            size_hint_y: None
            height: 280
