<BumilScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Latar belakang putih
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Data Bumil"
            font_size: 28
            bold: True
            color: 0, 0, 0, 1  # Warna teks hitam
            size_hint: None, None
            pos_hint: {"center_x": 0.5, "top": 0.99}
        # Button dengan gambar hamburger (menu)
        Button:
            background_normal: 'assets/hamb.png'  # Gambar ikon hamburger
            background_down: 'assets/hamb.png'
            size_hint: None, None
            size: 70, 70
            pos: 20, root.height - 70
            allow_stretch: True
            keep_ratio: True
            on_press: app.root.current = root.toggle_sidebar()
        
        # ScrollView untuk menampung GridLayout (supaya bisa scroll)
