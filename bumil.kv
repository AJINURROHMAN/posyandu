            size_hint: (1, 0.8)  # Mengatur tinggi ScrollView
            pos_hint: {"center_x": 0.5, "top": 0.9}

            # GridLayout vertikal untuk data balita
            GridLayout:
                id: data_grid
                cols: 1  # Mengatur grid menjadi satu kolom (vertikal)
                padding: 30  # Memberikan padding di sekeliling grid
                spacing: 35  # Memberikan jarak antar elemen dalam grid (antar BoxLayout)
                size_hint_y: None  # Supaya ScrollView berfungsi
                height: self.minimum_height  # Mengatur tinggi GridLayout berdasarkan isinya
                
