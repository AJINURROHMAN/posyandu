<DashlogScreen>:
    FloatLayout:
        # Konten utama
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 1
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: '50dp'
                padding: [15, 15, 15, 15]

                Button:
                    background_normal: 'assets/hamb.png'
                    size_hint: None, None
                    size: '70', '70'
                    pos_hint: {'center_y': 0.5}
                    on_press: root.toggle_sidebar()

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.2
                padding: [20, 20, 20, 20]
                spacing: 30

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.4, None
                    padding: [25, 10, 25, 10]
                    height: '100dp'
                    canvas.before:
                        Color:
                            rgba: 0, 0.75, 1, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [20, 20, 20, 20]


                    Label:
                        id: babies_count_label  # Tambahkan ID di sini
                        text: "0"  # Nilai default
                        size_hint_y: 0.10
                        font_size: '30sp'
                        bold: True
                        color: 0, 0, 0, 1  # Warna teks

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.4, None
                    
                    padding: [10, 10, 10, 10]
                    height: '100dp'
                    canvas.before:
                        Color:
                            rgba: 0, 0.75, 1, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [20, 20, 20, 20]

                   
                    Label:
                        id: pregnant_mothers_count_label  # Tambahkan ID di sini
                        text: "0"  # Nilai default
                        size_hint_y: 0.10
                        font_size: '30sp'
                        bold: True
                        color: 0, 0, 0, 1

            BoxLayout:
                size_hint_y: 0.6
                padding: [20, 10, 20, 10]
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size

                Carousel:
                    id: calendar_carousel  # ID untuk mengakses carousel
                    allow_stretch: True
                    loop: True  # Untuk membuat gambar bergerak secara terus-menerus

                    Image:
                        source: 'assets/foto.png'
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: None, None
                        width: 300  # Sesuaikan dengan ukuran yang diinginkan
                        height: 200  # Sesuaikan dengan ukuran yang diinginkan
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5} 

                    Image:
                        source: 'assets/profil.png'
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: None, None
                        width: 300  # Sesuaikan dengan ukuran yang diinginkan
                        height: 200  # Sesuaikan dengan ukuran yang diinginkan
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5} 

                    Image:
                        source: 'assets/background.png'
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: None, None
                        width: 300  # Sesuaikan dengan ukuran yang diinginkan
                        height: 200  # Sesuaikan dengan ukuran yang diinginkan
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5} 

            Widget:
                size_hint_y: None
                height: 150

        # Popup Box untuk animasi
        BoxLayout:
            id: popup_box
            orientation: 'vertical'
            size_hint: 0.8, None
            height: '60dp'
            pos_hint: {'top': 1.0, 'center_x': 0.5}
            opacity: 0  # Mulai dengan opacity 0
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20, 20, 20, 20]

            Label:
                text: "Login Berhasil"
                color: 1, 1, 1, 1
                bold: True
                halign: 'center'
                valign: 'middle'
                text_size: self.size

        # Sidebar
        BoxLayout:
            id: sidebar
            orientation: 'vertical'
            size_hint: None, 1
            width: 250
            pos_hint: {'top': 1}
            x: -self.width
            canvas.before:
                Color:
                    rgba: 0, 0.75, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Sidebar buttons here...
            Button:
                text: "Dashboard"
                bold: True
                color: 1, 1, 1, 1  # Warna teks putih
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0  # Latar belakang transparan
                background_normal: ''  # Menghilangkan gambar default pada tombol
                text_size: self.width, None  # Menyesuaikan lebar teks dengan lebar tombol
                halign: 'left'  # Meratakan teks ke kiri
                valign: 'middle'  # Meratakan teks ke tengah vertikal
                padding_x: 10  # Menambahkan jarak pada sisi kiri
                on_release: 
                    app.root.current = 'dashlog_screen'
                    root.hide_sidebar()
  
            Button:
                text: "Balita"
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0
                background_normal: ''
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
                padding_x: 10
                on_release: 
                    app.root.current = 'balita_screen'
                    root.hide_sidebar()

            Button:
                text: "Perkembangan Balita"
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0
                background_normal: ''
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
                padding_x: 10
                on_release: 
                    app.root.current = 'updatebalita_screen'  
                    root.hide_sidebar()

            Button:
                text: "Ibu Hamil"
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0
                background_normal: ''
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
                padding_x: 10
                on_release:
                    app.root.current = 'bumil_screen'  
                    root.hide_sidebar()

            Button:
                text: "Laporan"
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0
                background_normal: ''
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
                padding_x: 10
                on_release: 
                    app.root.current = 'laporan_screen'   
                    root.hide_sidebar() 

            Button:
                text: "Profil"
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0
                background_normal: ''
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
                padding_x: 10
                on_release:
                    app.root.current = 'profil_screen' 
                    root.hide_sidebar()

    


            Widget:
                size_hint_y: None
                height: 450
