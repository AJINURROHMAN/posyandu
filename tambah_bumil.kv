<TambahBumilScreen>:
    canvas.before:
        Color:
            rgb: 0.95, 0.95, 0.95  # Latar belakang putih terang
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        Button:
            background_normal: 'assets/back.png'
            background_down: 'assets/back.png'
            size_hint: None, None
            size: 35, 35
            pos: 20, root.height - 70
            allow_stretch: True
            on_release: app.root.current = 'balita_screen'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.6
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            padding: 30
            spacing: 20
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]

            Label:
                text: 'Form Tambah Data'
                font_size: 28
                size_hint_y: None
                height: 50
                color: 0.2, 0.2, 0.2, 1  # Warna teks abu-abu tua

            CustomTextInput:
                id: nama_bumil
                hint_text: 'Nama'
                multiline: False

            CustomTextInput:
                id: suami_bumil
                hint_text: 'Suami'
                multiline: False

            CustomTextInput:
                id: nik_bumil
                hint_text: 'NIK'
                multiline: False

            CustomTextInput:
                id: telepon_bumil
                hint_text: 'Telepone'
                multiline: False

            BoxLayout:
                size_hint_y: None
                height: 40
                spacing: 10

                Button:
                    text: 'Simpan'
                    size_hint_x: None
                    width: 100
                    on_release: root.simpan_data()
                    background_color: (0, 0, 0, 0)
                    color: 1, 1, 1, 1
                    canvas.before:
                        Color:
                            rgba: 0.2, 0.6, 1, 0.9
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [20]

                Button:
                    text: 'Batal'
                    size_hint_x: None
                    width: 100
                    on_release: app.root.current = 'balita_screen'
                    background_color: ( 0, 0, 0, 0)
                    color: 1, 1, 1, 1
                    canvas.before:
                        Color:
                            rgba: 1, 0.3, 0.3, 0.9
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [20]

<CustomTextInput@TextInput>:
    canvas.before:
        Color:
            rgba: self._bg_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]

        Color:
            rgba: self._border_color
        Line:
            width: 1
            rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

    foreground_color: 0.2, 0.2, 0.2, 1  # Warna teks abu-abu tua
    padding: [15, 10]
    background_color: 0, 0, 0, 0
    font_size: 16
    size_hint_y: None
    height: 45

    # Properti untuk warna fokus
    _bg_color: (0.95, 0.95, 0.95, 1)
    _border_color: (0.7, 0.7, 0.7, 1)

    # Animasi warna saat fokus
    on_focus:
        if self.focus: self._border_color = (0.2, 0.6, 1, 1)
        else: self._border_color = (0.7, 0.7, 0.7, 1)
