<TambahScreen>:
    canvas.before:
        Color:
            rgb: 0.95, 0.95, 0.95  # Latar belakang putih terang
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        Button:
            background_normal: 'assets/back.png'
            background_down: 'assets/back.png'
            size_hint: None, None
            size: 35, 35
            pos: 20, root.height - 70
            allow_stretch: True
            on_release: app.root.current = 'balita'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.6
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            padding: 30
            spacing: 20
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]

            Label:
                text: 'Form Tambah Data'
                font_size: 28
                size_hint_y: None
                height: 25
                color: 0.2, 0.2, 0.2, 1  # Warna teks abu-abu tua

            CustomTextInput:
                id: nama
                hint_text: 'Nama'
                multiline: False
                size_hint_x: 1  # Mengisi lebar penuh BoxLayout
                size_hint_y: None
                height: 40

            CustomTextInput:
                id: ibu
                hint_text: 'Ibu'
                multiline: False
                size_hint_x: 1  # Mengisi lebar penuh BoxLayout
                size_hint_y: None
                height: 40

            CustomTextInput:
                id: umur
                hint_text: 'Umur'
                multiline: False
                size_hint_x: 1  # Mengisi lebar penuh BoxLayout
                size_hint_y: None
                height: 40

            CustomTextInput:
                id: telepon
                hint_text: 'Telepon'
                multiline: False
                size_hint_x: 1  # Mengisi lebar penuh BoxLayout
                size_hint_y: None
                height: 40

            BoxLayout:
                size_hint_y: None
                height: 40
                spacing: 10

                Button:
                    text: 'Simpan'
                    size_hint_x: None
                    width: 100
                    on_release: root.simpan_data_balita()  # Memanggil metode simpan_data dari TambahScreen
                    background_color: (0, 0, 0, 0)
                    color: 1, 1, 1, 1
                    canvas.before:
                        Color:
                            rgba: 0.2, 0.6, 1, 0.9
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [20]

                Button:
                    text: 'Batal'
                    size_hint_x: None
                    width: 100
                    on_release: app.root.current = 'balita_screen'
                    background_color: (0, 0, 0, 0)
                    color: 1, 1, 1, 1
                    canvas.before:
                        Color:
                            rgba: 1, 0.3, 0.3, 0.9
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [20]
            Widget:
                size_hint_y: None
                height: 100