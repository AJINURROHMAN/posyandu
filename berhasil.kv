<BerhasilScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Latar belakang putih
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '50dp'
            padding: [15, 15, 15, 15]
            
            # Hamburger icon di pojok kiri atas
            Button:
                background_normal: 'assets/hamb.png'  # Ganti dengan jalur file gambar hamburger Anda
                size_hint: None, None
                size: '30dp', '30dp'
                pos_hint: {'center_y': 0.5}
                on_release: app.root.current = 'menu_screen'    
        # Bagian untuk kotak biru di paling atas dengan animasi (sekarang di bawah tombol menu)
        BoxLayout:
            id: top_box  # Menambahkan ID untuk mengakses BoxLayout ini dari Python
            size_hint_y: 0.10  # Mengambil 10% dari tinggi layar
            padding: [10, 10, 10, 10]
            opacity: 0  # Awalnya transparan untuk animasi masuk
            pos_hint: {'top': 1.2}  # Memulai di luar layar (di atas)
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1  # Warna kotak (biru)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0, 0, 50, 50]  # Radius sudut membulat
            
            # Label dengan teks di tengah
            Label:
                text: "Login Berhasil"
                color: 1, 1, 1, 1  # Warna teks (putih)
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.size  # Mengatur teks agar menyesuaikan ukuran

        # Bagian untuk ikon tombol hamburger di pojok kiri atas
        

        # Bagian untuk menampilkan elemen lain seperti ikon atau info
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            padding: [20, 10, 20, 10]
            spacing: 30  # Spasi antara dua elemen
            
            # Kotak pertama untuk jumlah balita dengan ikon di atas
            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 0, 0.3, 0.8, 1  # Warna kotak (biru muda)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10, 10, 10, 10]  # Radius sudut membulat

                Image:
                    source: 'assets/3.png'  # Ganti dengan jalur file gambar
                    size_hint_y: 0.6
                    allow_stretch: True
                    keep_ratio: False

                Label:
                    text: "Jumlah Balita"
                    size_hint_y: 0.2
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size

            # Kotak kedua untuk jumlah ibu hamil dengan ikon di atas
            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 0, 0.3, 0.8, 1  # Warna kotak (biru muda)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10, 10, 10, 10]  # Radius sudut membulat

                Image:
                    source: 'assets/8.png'  # Ganti dengan jalur file gambar
                    size_hint_y: 0.6
                    allow_stretch: True
                    keep_ratio: False

                Label:
                    text: "Jumlah Ibu Hamil"
                    size_hint_y: 0.2
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size

        # Bagian untuk kalender di bawah
        BoxLayout:
            size_hint_y: 0.6
            padding: [20, 10, 20, 10]
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Latar belakang putih

            Image:
                source: 'assets/date.png'  # Ganti dengan jalur file gambar
                allow_stretch: True
                keep_ratio: False
