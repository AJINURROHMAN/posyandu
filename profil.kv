<ProfilScreen>:
    FloatLayout:
        canvas:
            Color:
                rgba: 1, 1, 1, 1  # Latar belakang putih
            Rectangle:
                pos: self.pos
                size: self.size

        # Bagian Profil
        FloatLayout:
            Image:
                source: 'assets/foto.png'  # Path gambar
                size_hint: None, None
                size: '90dp', '90dp'
                pos_hint: {'center_x': 0.5, 'y': 0.75}

            BoxLayout:
                orientation: 'vertical'
                padding: [20, 10]
                spacing: 20
                pos_hint: {'center_x': 0.5, 'y': 0.4}

                # BoxLayout untuk Username
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp'
                    padding: [5, 5]
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1  # Garis bawah hitam
                        Line:
                            points: [self.x, self.y, self.right, self.y]
                            width: 1.0

                    Label:
                        id: username_label
                        text: '[b]Username:[/b]'  # Teks bold menggunakan markup
                        markup: True
                        color: (0, 0, 0, 1)
                        size_hint_x: 0.4
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size

                # BoxLayout untuk Password
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp'
                    padding: [5, 5]
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            points: [self.x, self.y, self.right, self.y]
                            width: 1.0

                    Label:
                        id: password_label
                        text: '[b]Password:[/b]'
                        markup: True
                        color: (0, 0, 0, 1)
                        size_hint_x: 0.4
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size

                Button:
                    text: 'Log Out'
                    size_hint_x: 0.5
                    background_color: (0, 0.5, 1, 0.9)
                    size_hint_y: None
                    pos_hint: {'center_x': 0.5}
                    height: '40dp'
                    on_release: 'login_screen'

        # Sidebar
        BoxLayout:
            id: sidebar
            orientation: 'vertical'
            size_hint: None, 1
            width: 250
            pos_hint: {'top': 1}
            x: -self.width
            canvas.before:
                Color:
                    rgba: 0, 0.75, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Tombol Sidebar
            Button:
                text: "Dashboard"
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0, 0, 0
                background_normal: ''
                halign: 'left'
                valign: 'middle'
                padding_x: 10
                on_release:
                    app.root.current = 'dashlog_screen'
                    root.hide_sidebar()

            # Tambahan tombol lainnya disini
            # Tombol lain dapat ditambahkan dengan format yang sama

        Button:
            background_normal: 'assets/hamb.png'
            size_hint: None, None
            size: 70, 70
            pos: 20, root.height - 70
            allow_stretch: True
            keep_ratio: True
            on_press: root.toggle_sidebar()
