
<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        Label:
            text: "Data List"
            font_size: dp(24)
            size_hint_y: None
            height: dp(50)

        ScrollView:
            BoxLayout:
                id: data_box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

        Button:
            text: "Add Data"
            size_hint_y: None
            height: dp(50)
            on_press: app.add_data()  # Tambah data baru ketika tombol ditekan


<DataButton@Button>:
    size_hint_y: None
    height: dp(50)
    color: 1, 1, 1, 1  # Warna teks
    on_press: app.show_data(self.text)  # Menampilkan data ketika tombol ditekan

<DataButton1@DataButton>:
    background_color: 0, 0.5, 0.8, 1  # Warna latar belakang 1

<DataButton2@DataButton>:
    background_color: 1, 0.5, 0, 1  # Warna latar belakang 2

<DataButton3@DataButton>:
    background_color: 0, 1, 0, 1  # Warna latar belakang 3
